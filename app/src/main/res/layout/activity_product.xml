<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mra.com.tastyfoodcafe.ProductActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkcream"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/MenuStyle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:tint="@color/creamyoranger"
                android:src="@drawable/logo2"/>


            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/profile_image"
                android:fontFamily="cursive"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:text="Tasty Food Cafe"
                android:textColor="@color/creamyoranger"
                android:textStyle="bold" />


        </RelativeLayout>






    </android.support.v7.widget.Toolbar>




    <RelativeLayout
        android:id="@+id/r1"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightcreamyoranger">


    <RelativeLayout
        android:id="@+id/r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >


        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:id="@+id/image"
            android:padding="15dp"
            android:src="@drawable/ic_launcher_foreground"/>

        <View
            android:id="@+id/View"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/image"
            android:layout_margin="20dp"
            android:background="@color/creamyoranger"
            />

        <TextView
            android:id="@+id/t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/text"
            android:layout_alignBottom="@+id/text"
            android:layout_alignStart="@+id/View"
            android:text="Product Name:-"
            android:fontFamily="casual"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/View"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@+id/t"
            android:fontFamily="casual"
            android:text="Sample"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/View1"
            android:layout_below="@+id/t"
            android:layout_marginTop="17dp"
            android:fontFamily="casual"
            android:text="PRISE$:-"
            android:textColor="@color/red"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/text2"
            android:layout_alignBottom="@+id/text2"
            android:layout_marginStart="19dp"
            android:layout_toEndOf="@+id/text2"
            android:fontFamily="casual"
            android:text="$ex"
            android:textSize="20dp" />


        <View
            android:id="@+id/View1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/text2"
            android:layout_margin="20dp"
            android:background="@color/creamyoranger"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/r"
        android:layout_marginTop="5dp">


        <Button
            android:id="@+id/addcart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add to Cart"
            android:layout_margin="5dp"
            android:background="@drawable/buynowbutton"/>
        <Button
            android:id="@+id/buynow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Buy Now"/>




    </LinearLayout>


    <TextView
        android:id="@+id/des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripation-*Best Product And Freshly Available"
        android:fontFamily="casual"
        android:textSize="15dp"
        android:layout_below="@id/lin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/des1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/code"
        android:fontFamily="casual"
        android:textSize="15dp"
        android:layout_below="@id/des"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    </RelativeLayout>






</RelativeLayout>
